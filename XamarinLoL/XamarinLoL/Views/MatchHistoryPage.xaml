<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="XamarinLoL.Views.MatchHistoryPage"
             Title="MatchHistoryPage">
    <ContentPage.Content>
        <ListView ItemsSource="{Binding Matchs}" IsRefreshing="{Binding Refresh}" RefreshCommand="{Binding GetRefreshedHistory}">
            <ListView.ItemTemplate>
                <DataTemplate>
                    <ImageCell Text="{Binding IsWinner}" ImageSource="{Binding Champion.SummonerIcon}" Detail="{Binding KdaPlayer}"></ImageCell>
                </DataTemplate>
            </ListView.ItemTemplate>
        </ListView>
    </ContentPage.Content>
</ContentPage>